<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" xmlns:tnt="sap.tnt" controllerName="ogrencikayit.index"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<html:style>
		.myButton .sapMBtnInner{
		border-radius: 30px;
		}
	</html:style>
	<Page title="Öğrenci Kayıt">
		<content>
			<VBox fitContainer="true" justifyContent="Center" alignItems="Center"
				alignContent="Center">
				<items>
					<Label text="Kullanıcı Girişi İçin Bilgilerinizi Giriniz..." />
					<Input placeholder="user name" name="kAdi" width="12rem" />
					<Input placeholder="password" type="Password" name="kSifre"
						width="12rem" />
					<Button width="12rem" text="Giriş" id="giris" name="btGiris" type="Emphasized" press="clickButton"
						class="myButton"/>
				</items>
			</VBox>
		</content>
	</Page>
</core:View>


